<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.christianquintero.practica7peluchitos.Venta_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        style="@style/layoutViewStyle">
        <TextView
            style="@style/textViewStyle"
            android:text="@string/venta"/>
        <EditText
            style="@style/editViewStyle"
            android:hint="@string/id"
            android:id="@+id/vID"
            />
        <EditText
            style="@style/editViewStyle"
            android:hint="@string/nombre"
            android:id="@+id/vNombre"
            />
        <EditText
            style="@style/editViewStyle"
            android:hint="@string/cantidad"
            android:id="@+id/vCantidad"
            />
        <Button
            style="@style/buttonViewStyle"
            android:text="@string/bVenta"
            android:onClick="_venta"/>
    </LinearLayout>

</FrameLayout>
